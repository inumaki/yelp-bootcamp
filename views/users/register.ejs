<%layout('layout/boilerplate')%>
<div class="col-6 offset-3">
<form action="/register" novalidate method="post"  class="check-validation">
  <div class="form-group mb-2 mt-5">
    <label for="username">Username</label>
    <input type="text" class="form-control" required id="username"name="username" placeholder="Enter username">
  </div>
    <div class="form-group mb-2 ">
      <label for="email">Email address</label>
      <input type="email" class="form-control" required id="email" aria-describedby="emailHelp" placeholder="Enter email" name="email">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
  
    <div class="form-group mb-2">
      <label for="password">Password</label>
      <input type="password" class="form-control" required id="password"name="password" placeholder="Password">
    </div>
 
    <button type="submit" class="btn btn-success mb-2">Sign up</button>
  </form>
</div>

