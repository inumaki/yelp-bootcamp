<%layout('layout/boilerplate')%>
<div class="col-6 offset-3">
<form action="/login" novalidate method="post"  class="check-validation">
  <div class="form-group mb-2 mt-5">
    <label for="username">Username</label>
    <input type="text" class="form-control" required id="username"name="username" placeholder="Enter username">
  </div>
 
    <div class="form-group mb-2">
      <label for="password">Password</label>
      <input type="password" class="form-control" required id="password"name="password" placeholder="Password">
    </div>
 
    <button type="submit" class="btn btn-success ">Log in</button>
    <a href="/register" class="btn  btn-success ">Sign up</a>
</form>
</div>


